<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="B1Task1" 
        Height="400" 
        Width="350"
        Background="#01b8ed"
        FontSize="14"
        FontFamily="Times New Roman" 
        Icon="/Views/main.png">
    <Grid Margin="0,0,0,4">
        <Button 
            Content="Запустить создание файлов"
            HorizontalAlignment="Left"
            Margin="34,70,0,0"
            VerticalAlignment="Top"
            Background="#013c85 "
            Foreground="Wheat"
            Cursor="Hand" 
            Name="beginFilesGenerationButton"
            Click="beginFilesGenerationButton_Click"
            Width="280"/>
        <Button 
            Content="Запустить объединение файлов"
            HorizontalAlignment="Left"
            Margin="34,117,0,0"
            VerticalAlignment="Top"
            Background="#013c85 "
            Foreground="Wheat"
            Cursor="Hand" 
            x:Name="concatFilesButton"
            Click="concatFilesButton_Click" Width="280"/>
        <Label 
            Content="(Итоговый файл: " 
            HorizontalAlignment="Left" 
            Margin="34,43,0,0" 
            VerticalAlignment="Top" 
            Height="24"
            Visibility="Hidden"
            Name="searchInfoLabel"/>
        <Button 
            Content="Выбрать итоговый файл" 
            HorizontalAlignment="Left" 
            Margin="34,18,0,0" 
            VerticalAlignment="Top"
            Background="#013c85 "
            Foreground="Wheat"
            Cursor="Hand" 
            Name="selectResultFile"
            Click="selectResultFile_Click" 
            Width="280"/>
        <Button 
            Content="Импортировать итоговый файл в базу данных"
            HorizontalAlignment="Left"
            Margin="34,160,0,0"
            VerticalAlignment="Top"
            Background="#013c85 "
            Foreground="Wheat"
            Cursor="Hand" 
            Name="importToDBButton"
            Click="importToDBButton_Click" Width="280"/>

        <ProgressBar 
            Margin="34,217,36,133"
            Name="importToDBProgressBar"
            Visibility="Hidden"/>

        <Label 
            Content="Строк импортировано: " 
            HorizontalAlignment="Left" 
            Margin="34,186,0,0" 
            VerticalAlignment="Top"
            Name="importProgressLabel"
            Visibility="Hidden"/>
        <Label 
            Content="" 
            HorizontalAlignment="Left" 
            Margin="184,186,0,0"
            VerticalAlignment="Top" 
            Name="importProgressValueLabel"/>
        <Button 
            Content="Посчитать сумму средних и медиану дробных"
            HorizontalAlignment="Left"
            Margin="34,260,0,0"
            VerticalAlignment="Top"
            Background="#013c85 "
            Foreground="Wheat"
            Cursor="Hand" 
            Name="calculateValuesButton"
            Click="calculateValuesButton_Click"/>
        <Label 
            Content="Сумма целых: " 
            HorizontalAlignment="Left" 
            Margin="34,285,0,0" 
            VerticalAlignment="Top" 
            Height="26"
            Name="numbersSumLabel"
            Visibility="Hidden"/>
        <Label 
            Content="" 
            HorizontalAlignment="Left" 
            Margin="132,285,0,0" 
            VerticalAlignment="Top" 
            Height="26"
            Name="numbersSumValueLabel"/>
        <Label 
            Content=""
            HorizontalAlignment="Left" 
            Margin="160,311,0,0"
            VerticalAlignment="Top"
            Name="doublesMedianValueLabel"/>
        <Label 
            Content="Медиана дробных: " 
            HorizontalAlignment="Left" 
            Margin="34,311,0,0" 
            VerticalAlignment="Top"
            Name="doublesMedianLabel"
            Visibility="Hidden"/>

    </Grid>
</Window>
