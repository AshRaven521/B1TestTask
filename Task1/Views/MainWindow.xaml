<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="B1Task1" 
        Height="450" 
        Width="800"
        Background="#01b8ed"
        FontSize="14"
        FontFamily="Times New Roman" Loaded="Window_Loaded">
    <Grid>
        <Button Content="Запустить создание файлов"
                HorizontalAlignment="Left"
                Margin="34,67,0,0"
                VerticalAlignment="Top"
                Background="#013c85 "
                Foreground="Wheat"
                Cursor="Hand" 
                Name="beginFilesGenerationButton"
                Click="beginFilesGenerationButton_Click" Width="191"/>
        <Button 
            Content="Запустить объединение файлов"
            HorizontalAlignment="Left"
            Margin="34,103,0,0"
            VerticalAlignment="Top"
            Background="#013c85 "
            Foreground="Wheat"
            Cursor="Hand" 
            x:Name="concatFilesButton"
            Click="concatFilesButton_Click"/>
        <Label 
            Content="Введите строку для удаления в файле" 
            HorizontalAlignment="Left" 
            Margin="433,43,0,0" 
            VerticalAlignment="Top"
            Name="searchStringLabel"/>
        <TextBox 
            HorizontalAlignment="Left" 
            Margin="437,78,0,0" 
            Text="" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="230"
            Name="searchStringTextBox"/>
        <Button 
            Content="Удалить" 
            HorizontalAlignment="Left" 
            Margin="437,118,0,0" 
            VerticalAlignment="Top"
            Background="#013c85 "
            Foreground="Wheat"
            Cursor="Hand" 
            Name="searchButton" Click="searchButton_Click" Width="230"/>
        <Label 
            Content="(Удаление будет производиться в файле: " 
            HorizontalAlignment="Left" 
            Margin="352,10,0,0" 
            VerticalAlignment="Top" 
            Height="28"
            Visibility="Hidden"
            Name="searchInfoLabel"/>
        <Button 
            Content="Выбрать итоговый файл" 
            HorizontalAlignment="Left" 
            Margin="34,18,0,0" 
            VerticalAlignment="Top"
            Background="#013c85 "
            Foreground="Wheat"
            Cursor="Hand" 
            Name="selectResultFile"
            Click="selectResultFile_Click" 
            Width="191"/>

    </Grid>
</Window>
